<?xml version="1.0" encoding="utf-8"?>



<LinearLayout   xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

    <TextView
            style="@style/TextDescriptions"
            android:id="@+id/rowTemplAccName"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:gravity="left"
            android:text="Account Name"/>

<LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/TextDescriptions"
            android:textStyle="bold"
            android:id="@+id/rowTemplPayName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:gravity="left"
            android:text="Name"/>



        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/default_padding"
                android:orientation="horizontal">

            <TextView
                    style="@style/TextMicro"
                    android:id="@+id/rowTemplDt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:singleLine="true"
                    android:text="01.01.2013"
                    android:textColor="@color/xdark_blue"
                    />

            <View   style="@style/DeliverSpaceVertical"/>

            <TextView
                    style="@style/TextMicro"
                    android:id="@+id/rowTemplPayCat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:gravity="left"
                    android:text="Category brhntntn"
                    android:textColor="@color/xdark_blue"/>


    </LinearLayout>
    </LinearLayout>




    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="0.4">

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:orientation="horizontal">

                <ImageView style="@style/ImageInRow"
                            android:id="@+id/rowImgTemplPlus"
                            android:scaleType="fitCenter"
                            android:src="@drawable/add_green" />


                 <ImageView style="@style/ImageInRow"
                            android:id="@+id/rowImgTemplMinus"
                            android:scaleType="fitCenter"
                            android:visibility="gone"
                            android:src="@drawable/remove"/>

            <TextView
                    style="@style/TextCaptions"
                    android:paddingLeft="@dimen/default_padding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:id="@+id/rowTemplSaldo"

                    android:text="1000000.77"/>
            </LinearLayout>



    </LinearLayout>


        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.1"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:layout_gravity="right"
                 android:orientation="horizontal">

            <ImageView style="@style/ImageInRow"
                       android:id="@+id/rowImgTemplRemind"
                       android:scaleType="fitCenter"
                       android:src="@drawable/alert_blue"/>

            <ImageView style="@style/ImageInRow"
                       android:id="@+id/rowImgTemplRepeat"
                       android:scaleType="fitCenter"
                       android:src="@drawable/calendar"/>

        </LinearLayout>



</LinearLayout>
</LinearLayout>