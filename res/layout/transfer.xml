<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/LayoutContext"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical" >

    <View style="@style/Separator"/>

    <LinearLayout  android:layout_width="fill_parent"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   android:orientation="horizontal">


        <ImageView style="@style/ImageInCaption"
                   android:scaleType="fitCenter"
                   android:src="@drawable/visa"
                   android:layout_gravity="center"/>




    <TextView
            style="@style/TextCaptions"
            android:id="@+id/txtTransAccName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="@dimen/default_x_padding"
            android:text="Account name"/>

    </LinearLayout>

    <LinearLayout  android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


        <LinearLayout  android:layout_height="wrap_content"
                       android:orientation="horizontal"
                       android:gravity="center"
                       android:layout_width="0dp"
                       android:layout_weight="1">

            <ImageView style="@style/ImageInCaption"
                       android:scaleType="fitCenter"
                       android:layout_gravity="center"
                       android:src="@drawable/transact"/>

       <TextView
                    style="@style/TextDescriptions"
                    android:id="@+id/txtTransPayName"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="Payord Name"/>
        </LinearLayout>

        <LinearLayout  android:layout_height="wrap_content"
                       android:orientation="horizontal"
                       android:layout_width="0dp"
                       android:gravity="center"
                       android:layout_weight="1">

            <ImageView style="@style/ImageInCaption"
                       android:scaleType="fitCenter"
                       android:layout_gravity="center"
                       android:src="@drawable/category"/>
        <TextView
                style="@style/TextDescriptions"
                android:padding="1dp"
                android:id="@+id/txtTransPayCat"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Category"/>

    </LinearLayout>

        <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">

            <ImageView style="@style/ImageInCaption"
                       android:id="@+id/imgTransRemind"
                       android:scaleType="fitCenter"
                       android:gravity="left"
                       android:src="@drawable/alert_blue"/>

            <TextView
                    style="@style/TextDescriptions"
                    android:padding="1dp"
                    android:id="@+id/txtTransPayTimeRemind"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="12:00"/>


        </LinearLayout>
    </LinearLayout>

    <View style="@style/Separator"/>
    <View style="@style/SeparatorLineMenu"/>
    <View style="@style/Separator"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center"
        android:id="@+id/layTransProgress"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <ListView
        android:visibility="visible"
        android:layout_height="0dip"
        android:layout_width="match_parent"
        android:id="@+id/lvTransfer"
        android:layout_weight="1"
        android:cacheColorHint="#00000000"
        android:choiceMode="singleChoice"/>




